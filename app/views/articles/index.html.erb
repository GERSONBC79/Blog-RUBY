<h1>Lista de articulos</h1>
 
<%= link_to 'Articulo nuevo', new_article_path %> 
<br>
<br>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr> 
  </thead>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Mostrar', article_path(article), {remote: :true, 'data-toggle': 'modal', 'data-target': '#modal'} %></td> 
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div id="modalCont" class="modal-content" ></div>
  </div>
</div>