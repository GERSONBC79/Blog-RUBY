<h1>Lista de articulos</h1>
 
<%= link_to 'Articulo nuevo', new_article_path %> 
<br>
<br>

<table>
  <tr>
    <th>Titulo</th>
    <th>Texto</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Mostrar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>