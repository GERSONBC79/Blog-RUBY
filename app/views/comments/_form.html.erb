<%= form_for([@article, @article.comments.build])  do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </p>
  
  <p>
    <%= f.submit  'Enviar', :class => 'btn btn-primary'%>
  </p>
<% end %>